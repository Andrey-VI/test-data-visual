<Map srs="epsg:3857" background-color="#ffffff">
  <Parameters>
    <Parameter name="sizes">600,400</Parameter>
  </Parameters>

<Style name="style">
  <Rule>
    <RasterSymbolizer opacity="0.1" scaling="spline36" />
  </Rule>
</Style>

<Layer name="layer"
  srs="epsg:3857">
    <StyleName>style</StyleName>
    <Datasource>
       <Parameter name="file">../../data/raster/snow-cover.tif</Parameter>
       <Parameter name="type">gdal</Parameter>
    </Datasource>
  </Layer>

</Map>
